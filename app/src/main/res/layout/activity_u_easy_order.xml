<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F9CB9"
    tools:context=".User.UEasyOrderActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F9CB9"
        android:id="@+id/appBariId"
        />

    <LinearLayout
        android:layout_below="@+id/appBariId"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#2F9CB9"
            android:elevation="25dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/balanceTv"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance: 0 tk"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/ordersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:text="Orders"
                android:textAllCaps="false"
                android:textColor="#fff"
                />
            <Button
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:id="@+id/pendingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff22"
                android:text="Pending"
                android:textAllCaps="false"
                android:textColor="#fff"
                />
            <Button
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:id="@+id/successButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:text="Success"
                android:textAllCaps="false"
                android:textColor="#fff"
                />




        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="140dp"
            app:cardCornerRadius="200dp"
            app:cardBackgroundColor="#2F9CB9"
            android:elevation="80dp"
            android:layout_height="140dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Chronometer
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chronometer"
                    android:textSize="30sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_centerInParent="true"

                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#4CAF50"
            android:text="Record"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:minWidth="120dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_2"
            android:text="Stop"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:minWidth="120dp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>
</RelativeLayout>