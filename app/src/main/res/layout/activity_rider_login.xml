<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".Rider.RiderLoginActivity">

    <include
        android:id="@+id/appBariId"
        layout="@layout/app_ber_layout"/>

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/appBariId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg_1"
                android:padding="13dp"
                android:hint="Phone"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                />
            <EditText
                android:inputType="textPassword"
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg_1"
                android:padding="13dp"
                android:hint="Password"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                />

            <ProgressBar
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/progressBar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:indeterminateTint="@color/purple_500"
                />
            <TextView
                android:id="@+id/register_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Don't Have Any Account? Register"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="17dp"

                />
            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_bg_2"
                android:text="Login Rider"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:minWidth="120dp"
                android:layout_gravity="right"
                android:layout_marginRight="18dp"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>